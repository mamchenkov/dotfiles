set $col-text-inactive #999999
set $col-indicator     #2f343f

# Windows
#                          border           background       text                indicator
client.focused             $col-bg-active   $col-bg-active   $col-text-active    $col-indicator
client.unfocused           $col-bg-inactive $col-bg-inactive $col-text-inactive  $col-indicator
client.focused_inactive    $col-bg-inactive $col-bg-inactive $col-text-inactive  $col-indicator
